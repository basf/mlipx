{
  "$defs": {
    "BasisSet": {
      "description": "Details of the basis set used.",
      "properties": {
        "type": {
          "description": "Type of basis set.",
          "enum": [
            "plane-wave",
            "gaussian"
          ],
          "title": "Type",
          "type": "string"
        },
        "plane_wave_cutoff_eV": {
          "anyOf": [
            {
              "exclusiveMinimum": 0.0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Plane-wave kinetic energy cutoff in eV.",
          "title": "Plane Wave Cutoff Ev"
        },
        "name": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Name of the basis set (e.g., 'def2-SVP').",
          "title": "Name"
        }
      },
      "required": [
        "type"
      ],
      "title": "BasisSet",
      "type": "object"
    },
    "ConvergenceCriteria": {
      "description": "SCF and geometry optimization convergence criteria.",
      "properties": {
        "scf_energy_threshold": {
          "anyOf": [
            {
              "exclusiveMinimum": 0.0,
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "SCF energy convergence criterion per atom in eV.",
          "title": "Scf Energy Threshold"
        }
      },
      "title": "ConvergenceCriteria",
      "type": "object"
    },
    "DFTMethod": {
      "properties": {
        "functional": {
          "description": "Name of the DFT exchange-correlation functional.",
          "title": "Functional",
          "type": "string"
        }
      },
      "required": [
        "functional"
      ],
      "title": "DFTMethod",
      "type": "object"
    },
    "DispersionCorrection": {
      "description": "Details of the dispersion correction applied.",
      "properties": {
        "type": {
          "description": "Dispersion correction type.",
          "enum": [
            "DFT-D2",
            "DFT-D3",
            "DFT-D3(BJ)",
            "DFT-D3(ABC)",
            "DFT-D4",
            "TS",
            "other"
          ],
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "DispersionCorrection",
      "type": "object"
    },
    "GenericDFTSettings": {
      "properties": {
        "type": {
          "const": "DFT",
          "title": "Type",
          "type": "string"
        },
        "code_version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Version of the DFT code used.",
          "title": "Code Version"
        },
        "method": {
          "anyOf": [
            {
              "$ref": "#/$defs/DFTMethod"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "basis_set": {
          "anyOf": [
            {
              "$ref": "#/$defs/BasisSet"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "pseudopotential": {
          "anyOf": [
            {
              "$ref": "#/$defs/Pseudopotential"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "dispersion_correction": {
          "anyOf": [
            {
              "$ref": "#/$defs/DispersionCorrection"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "convergence_criteria": {
          "anyOf": [
            {
              "$ref": "#/$defs/ConvergenceCriteria"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "code": {
          "enum": [
            "ORCA",
            "CP2K",
            "QuantumEspresso",
            "GPAW",
            "FHI-aims",
            "other"
          ],
          "title": "Code",
          "type": "string"
        }
      },
      "required": [
        "type",
        "code"
      ],
      "title": "GenericDFTSettings",
      "type": "object"
    },
    "HFSettings": {
      "properties": {
        "type": {
          "const": "HF",
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "HFSettings",
      "type": "object"
    },
    "Pseudopotential": {
      "description": "Details of the pseudopotential or effective core potential used.",
      "properties": {
        "name": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Identifier for the pseudopotential",
          "title": "Name"
        }
      },
      "title": "Pseudopotential",
      "type": "object"
    },
    "VASPSettings": {
      "properties": {
        "type": {
          "const": "DFT",
          "title": "Type",
          "type": "string"
        },
        "code_version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Version of the DFT code used.",
          "title": "Code Version"
        },
        "method": {
          "anyOf": [
            {
              "$ref": "#/$defs/DFTMethod"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "basis_set": {
          "anyOf": [
            {
              "$ref": "#/$defs/BasisSet"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "pseudopotential": {
          "anyOf": [
            {
              "$ref": "#/$defs/Pseudopotential"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "dispersion_correction": {
          "anyOf": [
            {
              "$ref": "#/$defs/DispersionCorrection"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "convergence_criteria": {
          "anyOf": [
            {
              "$ref": "#/$defs/ConvergenceCriteria"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "code": {
          "const": "VASP",
          "title": "Code",
          "type": "string"
        }
      },
      "required": [
        "type",
        "code"
      ],
      "title": "VASPSettings",
      "type": "object"
    }
  },
  "additionalProperties": {
    "anyOf": [
      {
        "discriminator": {
          "mapping": {
            "CP2K": "#/$defs/GenericDFTSettings",
            "FHI-aims": "#/$defs/GenericDFTSettings",
            "GPAW": "#/$defs/GenericDFTSettings",
            "ORCA": "#/$defs/GenericDFTSettings",
            "QuantumEspresso": "#/$defs/GenericDFTSettings",
            "VASP": "#/$defs/VASPSettings",
            "other": "#/$defs/GenericDFTSettings"
          },
          "propertyName": "code"
        },
        "oneOf": [
          {
            "$ref": "#/$defs/VASPSettings"
          },
          {
            "$ref": "#/$defs/GenericDFTSettings"
          }
        ]
      },
      {
        "$ref": "#/$defs/HFSettings"
      }
    ]
  },
  "description": "Root model for DFT settings of public datasets.",
  "title": "Datasets",
  "type": "object"
}